{{- $authorEmail := "" }}
{{- with site.Params.author }}
  {{- if reflect.IsMap . }}
    {{- with .email }}
      {{- $authorEmail = . }}
    {{- end }}
  {{- end }}
{{- end }}

{{- $authorName := "" }}
{{- with site.Params.author }}
  {{- if reflect.IsMap . }}
    {{- with .name }}
      {{- $authorName = . }}
    {{- end }}
  {{- else }}
    {{- $authorName  = . }}
  {{- end }}
{{- end }}

{{- $pctx := . }}
{{- if .IsHome }}{{ $pctx = .Site }}{{ end }}
{{- $pages := slice }}
{{- if or $.IsHome $.IsSection }}
{{- $pages = $pctx.RegularPages }}
{{- else }}
{{- $pages = $pctx.Pages }}
{{- end }}
{{- $limit := .Site.Config.Services.RSS.Limit }}
{{- if ge $limit 1 }}
{{- $pages = $pages | first $limit }}
{{- end }}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ if eq .Title .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{ . }} on {{ end }}{{ .Site.Title }}{{ end }}</title>
    <link>{{ .Permalink | strings.TrimSuffix "/" }}</link>
    <author>{{ .Site.Params.author }}</author>
    <description>{{ with .Description }}{{ . }}{{ else }}{{ .Site.Params.description }}{{ end }}</description>
    <generator>Hugo {{ hugo.Version }}</generator>
    <language>{{ site.Language.LanguageCode }}</language>
    <copyright>Copyright {{ .Site.Params.copyrightYear }} {{ .Site.Params.copyrightHolder }}. Licensed under {{ .Site.Params.licenseName }}.</copyright>{{ if not .Date.IsZero }}
    <lastBuildDate>{{ (index $pages.ByLastmod.Reverse 0).Lastmod.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}
    <dc:rights>{{ .Site.Params.licenseName }}</dc:rights>
    <dc:license>{{ .Site.Params.license }}</dc:license>
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink | strings.TrimSuffix "/" }}</link>
      <pubDate>{{ .PublishDate.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{- with $authorName }}
      <author>{{ . }}</author>
      <dc:creator>{{ . }}</dc:creator>
      {{- end }}
      <guid>{{ .Permalink }}</guid>
      <description>{{ with .Description }}{{ . | transform.XMLEscape }}{{ else }}{{ .Summary | transform.XMLEscape }}{{ end }}</description>
      {{- if .Content }}
      <content:encoded>{{ printf "<![CDATA[%s]]>" .Content | safeHTML }}</content:encoded>
      {{- end }}
      {{- with .Params.tags }}
      {{- range . }}
      <category>{{ . }}</category>
      {{- end }}
      {{- end }}
      {{- with .Params.image }}
      <enclosure url="{{ . | absURL }}" type="image/jpeg" />
      {{- end }}
      {{- if .Description }}
      <dc:description>{{ .Description | transform.XMLEscape }}</dc:description>
      {{- end }}
      <dc:date>{{ .PublishDate.Format "2006-01-02T15:04:05Z07:00" }}</dc:date>
      <dc:rights>{{ $.Site.Params.licenseName }}</dc:rights>
      <dc:license>{{ $.Site.Params.license }}</dc:license>
    </item>
    {{- end }}
  </channel>
</rss>
